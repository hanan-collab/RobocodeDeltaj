delta Cornering {
    modifies jab.module.Movement {
        adds import robocode.HitWallEvent;
        adds import robocode.Event;

        adds int turnRightValue = 45;

        modifies move() {
            bot.setMaxVelocity(8);
            bot.setAhead(10000);
        }

        adds listen(Event e) {
            if (e instanceof HitWallEvent) {
                bot.setTurnRight(turnRightValue);
            }
        }
    }
}
